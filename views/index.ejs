<%- include('header') -%>

    <body>
        <div class="box" id="heading">
            <h1>
                <%= listTitle %>
            </h1>

        </div>
        <div class="box">
            <ul>
                <% if (itemEls) { %>
                    <% itemEls.map(item=> { %>

                        <li class="item">
                            <input type="checkbox" name="" id="">
                            <p>
                                <%= item.itemName %>
                            </p>
                        </li>

                        <% }) %>
                            <% } %>
            </ul>

            <form class="item" action="/" method="post">
                <input type="text" name="newItemInput" id="newItemInput" autofocus placeholder="New item"
                    autocomplete="off">
                <button type="submit" name="list" value=<%=listTitle %> >+</button>
            </form>
        </div>

        <%- include('footer') -%>